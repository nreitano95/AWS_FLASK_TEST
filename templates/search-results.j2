{% extends "main.j2" %}

{% block title %}
  Search Results
{% endblock %}

{% block header %}
  <h1>Search Results</h1>
{% endblock %}

{% block body %}
  {# Search Bar #}
  <div class="container">
    <form method="POST" class="search-bar">
      <div class="form-group">
        <label for="submitSearch">Search for Any Organization</label>
        <input class="form-control" type="text" placeholder="Search for Organization..." id="name" name="name" value="{{ request.form['name'] }}">
      </div>

      <input class="btn btn-primary" type="submit" value='Submit'>
      <a href="{{ url_for('root') }}" class="btn btn-default">Cancel</a>

    </form>

    <div class="search-results">

    {% if Organizations == () %}
      <div class='search-results'>
        <h3>No Results Found</h3>
        <p>Try searching again or using an Advanced Search</p>
      </div>
    {% endif %}

    {% for organization in Organizations %}
      <img src="{{ organization['imgPath'] }}" class="img-thumbnail">
      <a href="{{ url_for('organizationPage', id=organization['organization_id']) }}">{{ organization['name'] }}</a>  
      {% endfor %}
      <br>
      <br>
      <br>
      <a href="#top">Return to Top</a>

    </div>
  </div>


  

{% endblock %}

